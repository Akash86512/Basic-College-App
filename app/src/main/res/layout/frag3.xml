<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adview"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2368632371520037/9698473426">

    </com.google.android.gms.ads.AdView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="147dp"
                    android:layout_height="107dp"
                    android:layout_margin="20dp"
                    android:id="@+id/jna"
                    android:background="@drawable/jnanagni" />




                <Button
                    android:id="@+id/hostal"
                    android:layout_width="146dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/hostel" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="           Jnanagni"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="     Hostel Night"
                    android:textColor="@color/white"
                    android:textSize="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="147dp"
                    android:layout_height="107dp"
                    android:layout_margin="20dp"
                    android:id="@+id/gpl"
                    android:background="@drawable/gpl" />




                <Button
                    android:id="@+id/yoga"
                    android:layout_width="146dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/yoga" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="           GPL"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

                <TextView
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="           Yoga"
                    android:textColor="@color/white"
                    android:textSize="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="147dp"
                    android:layout_height="107dp"
                    android:layout_margin="20dp"
                    android:id="@+id/election"
                    android:background="@drawable/election" />



                <Button
                    android:layout_width="147dp"
                    android:layout_height="107dp"
                    android:layout_margin="20dp"
                    android:id="@+id/fresher"
                    android:background="@drawable/fresher" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="           Election"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

                <TextView
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:text="     Freshers Party"
                    android:textColor="@color/white"
                    android:textSize="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <Button
                    android:layout_width="147dp"
                    android:layout_height="107dp"
                    android:layout_margin="20dp"
                    android:id="@+id/sport"
                    android:background="@drawable/sport" />



                <Button
                    android:id="@+id/esl"
                    android:layout_width="146dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/esl" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="      Other Sport"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

                <TextView
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="           ESL"
                    android:textColor="@color/white"
                    android:textSize="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <Button
                    android:layout_width="147dp"
                    android:layout_height="107dp"
                    android:layout_margin="20dp"
                    android:id="@+id/blood"
                    android:background="@drawable/blood" />





                <Button
                    android:id="@+id/social"
                    android:layout_width="146dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/social" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:text="     Blood Donation"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />

                <TextView
                    android:layout_width="148dp"
                    android:layout_height="100dp"
                    android:text="     Social Work"
                    android:textColor="@color/white"
                    android:textSize="20dp" />



            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>