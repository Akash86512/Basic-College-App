<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.akashkumar.gkv1.Fetcourse">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="199dp"
                android:layout_height="186dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/cse"
                android:background="@drawable/cse2"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:text="Computer Science and Engineering"
                />
            <Button
                android:layout_width="199dp"
                android:layout_height="186dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:id="@+id/ece"
                android:background="@drawable/esc2"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white1"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:text="Electronics Communication and Engineering"
                />

            <Button
                android:layout_width="199dp"
                android:layout_height="186dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:id="@+id/me"
                android:background="@drawable/mech1"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:text="Mechanical Engineering"
                />
            <Button
                android:layout_width="199dp"
                android:layout_height="186dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/ee"
                android:layout_marginTop="20dp"
                android:background="@drawable/electrical"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white1"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:text="Electrical Engineering"
                />



        </LinearLayout>
    </ScrollView>



</LinearLayout>
